<div class="container">
    <% if @book.errors.any? %>
        <%= @book.errors.count %>件のエラーが発生しました
        <ul>
        <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
        </ul>
    <% end %>
    <div class="row">
        <div class="col-md-3">
            <%= render 'users/info', user:@user %> 
            <%= render 'new', book: @new_book %>
        </div>

        <div class="offset-md-1 col-md-8">
            <h2>Book detail</h2>
            <table class="table table-hover table-inverse">
                <tbody>
                    <tr>
                        <td>
                            <%= link_to user_path(@book.user_id) do %>
                                <%= image_tag @book.user.get_profile_image(100,100) %>
                                <%= @book.user.name %>
                            <% end %>
                        </td>
                        <td>
                            <%= link_to book_path(@book.id) do %>
                                <%= @book.title %>
                            <% end %>
                        </td>
                        <td>
                            <%= @book.body %>
                        </td>
                        <td>
                            コメント数：<%= @book.book_comments.count %>
                        </td>
                        <% if @user == current_user %>
                          <td>
                              <%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-success" %>
                          </td>
                          <td>
                              <%= link_to "Destroy", book_path(@book.id), class:"btn btn-danger", method: :delete %>
                          </td>
                        <% end %>
                    </tr>
                    <% @book.book_comments.each do |book_comment| %>
                        <tr>
                            <td>
                                <%= image_tag book_comment.user.get_profile_image(50,50) %>
                            </td>
                            <td>
                                <%= book_comment.user.name %>
                            </td>
                            <td>
                                <%= book_comment.comment %>
                            </td>
                            <% if book_comment.user == current_user %>
                                <td>
                                    <%= link_to "Destroy", book_book_comments_path(book_comment.id), class:"btn btn-danger", method: :delete %>
                                </td>
                            <% end %>
                        </tr>
                    <% end %>
                    <tr>
                        <%= form_with model: [@book, @new_book_comment] do |f| %>
                            <div class="form-group">
                                <%= f.text_area :comment, rows: '5', class: "form-control" %>
                            </div>

                            <div class="form-group">
                                <%= f.submit '送信', class: "btn btn-success" %>
                            </div>    
                        <% end %>    
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div